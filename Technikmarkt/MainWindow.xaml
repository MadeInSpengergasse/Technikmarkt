<Window x:Class="Technikmarkt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Technikmarkt"
        xmlns:model="clr-namespace:Technikmarkt.model"
        mc:Ignorable="d"
        Title="Technikmarkt Overview" Height="350" Width="600">
    <Window.Resources>
        <model:Viewmodel_Technikmarkt x:Key="vm" />
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource vm}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
            <TextBlock Text="Anbieter" TextAlignment="Left" FontSize="24" Grid.Column="0" Grid.Row="0"/>
        <ListBox x:Name="Listbox_anbieter" Grid.Column="0" Grid.Row="1" 
                 ItemsSource="{Binding AlleAnbieter}" 
                 DisplayMemberPath="a_anbietername"
                 SelectedValuePath="a_anbietername">
            <ListBox.SelectedValue>
                <Binding Path="GewaelterAnbieter"
                         Mode="OneWayToSource"
                         BindsDirectlyToSource="True" />
            </ListBox.SelectedValue>
        </ListBox>

        <TextBlock Text="Händler"  TextAlignment="Left" FontSize="24" Grid.Column="1" Grid.Row="0"/>

        <ListBox x:Name="Listbox_haendler" Grid.Column="1" Grid.Row="1"
                 ItemsSource="{Binding AlleHaendler}" 
                 DisplayMemberPath="h_haendlername"
                 SelectedValuePath="h_haendlername">
            <ListBox.SelectedValue>
                <Binding Path="GewaelterHaendler"
                         Mode="OneWayToSource"
                         BindsDirectlyToSource="True" />
            </ListBox.SelectedValue>
        </ListBox>

        <Button x:Name="anbieter_information_button" Content="Anbieter Information" Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="8"
                Command="{Binding SaveInsertCommand}" 
                CommandParameter="{Binding ElementName=Listbox_anbieter, Path=SelectedItem}"
                />
        <!-- SaveInsertCommand sollte umbenannt werden -->
        <Button x:Name="haendler_information_button" Content="Händler Information" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="8"
                Command="{Binding SaveInsertCommand}" 
                CommandParameter="{Binding ElementName=Listbox_haendler, Path=SelectedItem}"
                />
    </Grid>
</Window>
